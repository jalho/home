# some hotkeys
bindsym $mod+I exec --no-startup-id firefox
bindsym $mod+Return exec alacritty -e tmux 

# set monitors frame frequency (use `xrandr` to see the available "outputs")
exec --no-startup-id xrandr --output DP-4 --mode 3840x2160 --rate 144
exec --no-startup-id xrandr --output HDMI-0 --mode 1920x1080 --rate 144

# start a compositor thing that allows making stuff transparent
exec --no-startup-id picom

# set a random wallpaper
feh --bg-scale "$(find ~/Pictures/wallpapers/ -type f | shuf -n 1)"
